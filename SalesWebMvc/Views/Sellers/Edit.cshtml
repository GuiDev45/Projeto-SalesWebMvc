@model SalesWebMvc.Models.ViewModels.SellerFormViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>@ViewData["Title"]</h2>

<h4>Seller</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Seller.Id" />
            <div class="form-group">
                <label asp-for="Seller.Name" class="col-form-label mt-1"></label>
                <input asp-for="Seller.Name" class="form-control" placeholder="Name" />
            </div>
            <div class="form-group">
                <label asp-for="Seller.Email" class="col-form-label mt-1"></label>
                <input asp-for="Seller.Email" class="form-control" placeholder="E-mail" />
            </div>
            <div class="form-group">
                <label asp-for="Seller.BirthDate" class="col-form-label mt-1"></label>
                <input asp-for="Seller.BirthDate" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Seller.BaseSalary" class="col-form-label mt-1"></label>
                <input asp-for="Seller.BaseSalary" class="form-control" placeholder="Base Salary" />
            </div>
            <div class="form-group">
                <label asp-for="Seller.DepartmentId" class="col-form-label mt-1"></label>
                <select asp-for="Seller.DepartmentId" asp-items="@(new SelectList(Model.Departments,"Id","Name"))" class="form-select "></select>
            </div>
            <hr />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success">
            </div>
        </form>
    </div>
</div>

